@page
@model Saberin_Test.Pages.Contacts.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Contact[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact[0].LastName)
            </th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Contact) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                
                    @foreach (var address in item.Addresses)
                    {
                        @Html.DisplayFor(modelItem => address.Street)
                        <br />
                        @Html.DisplayFor(modelItem => address.City)
                        <br />
                        @Html.DisplayFor(modelItem => address.State)
                        <br />
                        @Html.DisplayFor(modelItem => address.ZipCode)
                        <br />
                        if (item.Addresses.IndexOf(address) != item.Addresses.Count - 1)
                        {
                            <p>-----------------------</p>
                        }
                    }


            </td>
        </tr>
}
    </tbody>
</table>
